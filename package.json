{
  "name": "@ansvar/mcp-sqlite",
  "version": "1.0.4",
  "description": "Drop-in replacement for better-sqlite3 using WebAssembly. Zero native modules â€” works on any Node.js version and platform. Includes FTS5.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "sqlite",
    "wasm",
    "better-sqlite3",
    "fts5",
    "mcp",
    "drop-in",
    "no-native"
  ],
  "author": "Ansvar Systems <hello@ansvar.eu> (https://ansvar.eu)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ansvar-Systems/mcp-sqlite.git"
  },
  "homepage": "https://github.com/Ansvar-Systems/mcp-sqlite",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "node-sqlite3-wasm": "^0.8.53"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
